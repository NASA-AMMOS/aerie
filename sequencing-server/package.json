{
  "name": "sequencing-server",
  "version": "3.0.0",
  "description": "Aerie sequencing server",
  "type": "module",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "./plugins/*"
  ],
  "scripts": {
    "build": "npm run build:clean; npm run build:plugins; tsc -p tsconfig.build.json; npm run copy-preface; npm run copy-temporal-polyfill; npm run copy-channel-types; npm run copy-parameter-types;",
    "build:plugins": "npm run build --workspaces;",
    "build:server": "tsc -p tsconfig.build.json",
    "build:clean": "rm -rf ./build",
    "copy-preface": "cp ./src/lib/codegen/CommandEDSLPreface.ts ./build/lib/codegen/CommandEDSLPreface.ts;",
    "copy-temporal-polyfill": "cp src/types/TemporalPolyfillTypes.ts ./build/types/TemporalPolyfillTypes.ts;",
    "copy-channel-types": "cp src/types/ChannelTypes.ts ./build/types/ChannelTypes.ts;",
    "copy-parameter-types": "cp src/types/ParameterTypes.ts ./build/types/ParameterTypes.ts;",
    "debug": "node --inspect=0.0.0.0:9229 --experimental-vm-modules ./build/app.js",
    "dev": "npm run build && concurrently -n \"tsc,node\" -c \"blue,red\" \"npm run ts-watch\" \"npm run dev-server\"",
    "dev-server": "supervisor -- --inspect=0.0.0.0 --experimental-vm-modules ./build/app.js",
    "format": "npx prettier --config ./.prettierrc -w ./src ./test",
    "start": "node --experimental-vm-modules ./build/app.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules npx jest",
    "ts-watch": "npm run copy-preface; npm run copy-temporal-polyfill; npm run copy-channel-types; npm run copy-parameter-types; tsc -p tsconfig.build.json --watch"
  },
  "dependencies": {
    "@js-temporal/polyfill": "~0.4.3",
    "@nasa-jpl/aerie-ampcs": "~1.0.6",
    "@nasa-jpl/aerie-ts-user-code-runner": "~0.7.0",
    "@nasa-jpl/seq-json-schema": "1.0.20",
    "body-parser": "~1.20.1",
    "dataloader": "~2.2.0",
    "express": "~5.0.0-beta.1",
    "graphql-request": "~5.1.0",
    "jwt-decode": "~3.1.2",
    "pg": "~8.9.0",
    "pg-format": "~1.0.4",
    "piscina": "~3.2.0",
    "postgres-interval": "~4.0.0",
    "reserved-words": "~0.1.2",
    "typescript": "^5",
    "winston": "~3.8.2"
  },
  "devDependencies": {
    "@microsoft/tsdoc": "~0.14.2",
    "@tsconfig/node16-strictest-esm": "~1.0.3",
    "@types/express": "~4.17.16",
    "@types/jest": "~29.4.0",
    "@types/node": "~18.11.18",
    "@types/pg": "~8.6.6",
    "@types/pg-format": "~1.0.2",
    "@types/reserved-words": "~0.1.0",
    "ajv": "~8.12.0",
    "concurrently": "~7.6.0",
    "dotenv": "~16.0.3",
    "form-data": "~4.0.0",
    "jest": "~29.4.1",
    "jest-circus": "~29.5.0",
    "jest-extended": "~3.2.4",
    "jest-html-reporters": "~3.1.4",
    "jest-junit": "^16.0.0",
    "node-fetch": "~3.3.0",
    "prettier": "~2.8.3",
    "supervisor": "~0.12.0",
    "ts-jest": "~29.1.0",
    "ts-node": "~10.9.1"
  },
  "overrides": {
    "express": {
      "qs": "6.11.0"
    }
  }
}
